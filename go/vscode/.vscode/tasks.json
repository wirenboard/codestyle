{
  "version": "2.0.0",
  "options": {
    "env": {
      "DEBUG": "1",
      "TARGET_ARCH": "arm64",
      "DEB_TARGET_ARCH": "arm64",
      "GOTEST": "gotestsum --format=testname --",
      "WBGO_LOCAL_PATH": "../wbgo"
    }
  },
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make <ИМЯ БИНАРНИКА>",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "make test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": [
        "[wbgo] Build (amd64)"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run certain test",
      "type": "shell",
      "command": "make test GOFLAGS=-run=TestRuleReloadSuite/TestNoReloading",
      "group": "test",
      "dependsOn": [
        "[wbgo] Build (amd64)"
      ],
      "problemMatcher": []
    },
    {
      "label": "[wbgo] Build",
      "type": "shell",
      "command": "make wbgoso",
      "options": {
        "cwd": "${workspaceFolder}/../wbgo"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "[wbgo] Build (amd64)",
      "type": "shell",
      "command": "make wbgoso TARGET_ARCH=amd64",
      "options": {
        "cwd": "${workspaceFolder}/../wbgo"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "[wbgo] Run tests",
      "type": "shell",
      "command": "make test",
      "options": {
        "cwd": "${workspaceFolder}/../wbgo"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Copy to wb",
      "type": "shell",
      "command": "scp /workspaces/<ИМЯ ПРОЕКТА>/<ИМЯ БИНАРНИКА> /workspaces/wbgo/arm64.wbgo.so root@<IP КОНТРОЛЛЕРА>:",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build",
        "[wbgo] Build"
      ],
      "problemMatcher": []
    },
    {
      "label": "Remote exec",
      "type": "shell",
      "command": "ssh",
      "args": [
        "root@<IP КОНТРОЛЛЕРА>",
        "go/bin/dlv --listen=:4000 --headless=true --api-version=2 exec -- ./<ИМЯ БИНАРНИКА> -wbgo ./arm64.wbgo.so"
      ],
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}