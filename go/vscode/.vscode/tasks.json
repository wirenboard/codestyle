{
  "version": "2.0.0",
  "options": {
    "shell": {
      "executable": "schroot",
      "args": [
        "-p",
        "-c",
        "bullseye-amd64-sbuild",
        "--",
        "/bin/bash",
        "-c"
      ]
    },
    "env": {
      "TARGET_ARCH": "arm64",
      "DEB_TARGET_ARCH": "arm64",
      "GO": "/usr/lib/go-1.21/bin/go",
      "WBGO_LOCAL_PATH": "wbgo"
    }
  },
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make wb-rules",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "make test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": [
        "[wbgo] Build (amd64)"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run certain test",
      "type": "shell",
      "command": "make test GOFLAGS=-run=TestRuleReloadSuite/TestNoReloading",
      "group": "test",
      "dependsOn": [
        "[wbgo] Build (amd64)"
      ],
      "problemMatcher": []
    },
    {
      "label": "[wbgo] Build",
      "type": "shell",
      "command": "make wbgoso",
      "options": {
        "cwd": "${workspaceFolder}/wbgo"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "[wbgo] Build (amd64)",
      "type": "shell",
      "command": "make wbgoso TARGET_ARCH=amd64",
      "options": {
        "cwd": "${workspaceFolder}/wbgo"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "[wbgo] Run tests",
      "type": "shell",
      "command": "make test",
      "options": {
        "cwd": "${workspaceFolder}/wbgo"
      },
      "group": "test",
      "problemMatcher": []
    }
  ]
}
