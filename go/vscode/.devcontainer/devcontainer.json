{
    "image": "contactless/devenv:latest",
    "runArgs": [
        "--privileged",
        "--network=host"
    ],
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,readonly,type=bind",
        "source=${localWorkspaceFolder}/../codestyle,target=/workspaces/codestyle,type=bind",
        "source=${localWorkspaceFolder}/../wbgo,target=/workspaces/wbgo,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go",
                "GitHub.copilot-chat",
                "GitHub.copilot"
            ]
        }
    },
    "postCreateCommand": "bash ../codestyle/go/local/linux-devenv.sh",
    "containerEnv": {
        "PATH": "/usr/local/go/bin:/root/go/bin:${localEnv:PATH}"
    }
}
