{
    "image": "contactless/devenv:latest",
    "runArgs": [
        "--privileged",
        "--network=host"
    ],
    "mounts": [
        "source=${localWorkspaceFolder}/../codestyle,target=/workspaces/codestyle,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "GitHub.copilot-chat",
                "GitHub.copilot"
            ]
        }
    },
    "postCreateCommand": "bash ../codestyle/cpp/local/linux-devenv.sh"
}