            "type": "shell",
            "command": "scp /workspaces/<ИМЯ ПРОЕКТА>/build/release/<ИМЯ БИНАРНИКА> root@<IP КОНТРОЛЛЕРА>:/usr/bin/",
            "dependsOrder": "sequence",
